<?xml version="1.0" encoding="utf-8"?>
<!--main.xml-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#b4eeb4">

    <TextView
        android:text="Mealtime Calculator"
        android:gravity="center_vertical|center_horizontal"
        android:textSize="26sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:background="#b4eeb4"
        android:layout_marginBottom="5sp"
        android:typeface="sans"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#b4eeb4"
        android:paddingBottom="10sp">
        <TextView android:background="@drawable/cell_shape" android:gravity="start" android:layout_weight="2" android:padding="5dp" android:id="@+id/name2" android:layout_width="0sp" android:layout_height="match_parent" android:text="Name"
            android:textStyle="bold"/>
        <TextView android:background="@drawable/cell_shape" android:gravity="center" android:layout_weight="1" android:padding="5dp" android:id="@+id/preis2" android:layout_width="0sp" android:layout_height="match_parent" android:text="g"
            android:textStyle="bold"/>
        <TextView android:background="@drawable/cell_shape" android:gravity="center" android:layout_weight="1" android:padding="5dp" android:id="@+id/grundmenge2" android:layout_width="0sp" android:layout_height="match_parent" android:text="€"
            android:textStyle="bold"/>
        <TextView android:background="@drawable/cell_shape" android:gravity="center" android:layout_weight="1" android:padding="5dp" android:id="@+id/mzmenge2" android:layout_width="0sp" android:layout_height="match_parent" android:text="g/MZ"
            android:textStyle="bold"/>
        <TextView android:background="@drawable/cell_shape" android:gravity="center" android:layout_weight="1" android:padding="5dp" android:id="@+id/mzpreis2" android:layout_width="0sp" android:layout_height="match_parent" android:text="€/MZ"
            android:textStyle="bold"/>
    </LinearLayout>

    <ListView
        android:id="@+id/list"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:cacheColorHint="#b4eeb4">
    </ListView>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Zutat hinzufügen"
        android:id="@+id/add"
        android:layout_marginTop="10dp" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Preis für Gericht berechnen"
        android:id="@+id/sum"
        android:layout_marginTop="10dp" />

</LinearLayout>